<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="my.edu.utar.loanapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/calculator"
        android:label="@string/app_name"
        android:roundIcon="@drawable/calculator"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.LoanApp"
        tools:targetApi="35">
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"></activity>
        <activity
            android:name=".menu"
            android:exported="true"></activity>
        <activity
            android:name=".AmortizationSchedule"
            android:exported="false" />
        <activity
            android:name=".housingloan"
            android:exported="false" />
        <activity
            android:name=".personalloan"
            android:exported="false" />
    </application>
</manifest>
